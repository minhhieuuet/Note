			});
		});

		$(document).ready(function(){
			$("#loginForm").show();
			$("#chatForm").hide();
			//Bat su kien login
			$("#loginBtn").click(function(){
				$("#loginBtn").attr('disabled',true);
				$("#loginBtn").html("Xin đợi...");
				socket.emit("client-send-username",$("#username").val());
			});

		});
